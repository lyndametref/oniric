- get_header();

.container
	.row
		.col-lg-8
			- if ( have_posts() ) :
			- while ( have_posts() ) :
			- the_post();
			h1
				- wp_title();
			- if ($content = get_the_content("Read More", true)) echo $content;
			- endwhile;
			- endif;

		.col-lg-4
			- get_template_part("sidebar");

- get_footer();
